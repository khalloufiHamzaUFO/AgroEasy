{% extends 'base.html.twig' %}

{% block title %}New Participation{% endblock %}

{% block body %}
    <h1>Ajouter un Participant</h1>
  {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

<table>
<tr>
     <td> {{form_label(form.id_utilisateur, "Id utilisateur")}}</td>
     <td> {{ form_widget(form.id_utilisateur) }}</td>
    <td> {{ form_errors(form.id_utilisateur) }}</td>
</tr>

<tr>
     <td> {{form_label(form.evenement, "Id évènement")}}</td>
     <td> {{ form_widget(form.evenement) }}</td>
    <td> {{ form_errors(form.evenement) }}</td>
</tr>
<tr>
     <td> {{form_label(form.heure, "L'heure")}}</td>
     <td> {{ form_widget(form.heure) }}</td>
    <td> {{ form_errors(form.heure) }}</td>
</tr>

</table>


    <button class="btn">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}

    <a href="{{ path('app_participation_index') }}">Retour à la liste</a>
{% endblock %}
